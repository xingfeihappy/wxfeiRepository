<?xml version="1.0" encoding="UTF-8"?>
<!-- 指定Spring配置文件的Schema信息 -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- 配置DAO组件的模板 ,使用Bean继承来简化DAO组件的配置 -->
	<bean id="daoTemplate" abstract="true" lazy-init="true"
		p:sessionFactory-ref="sessionFactory" />

    <bean id="dishesDao" class="com.projection.dao.DishesDao"
		parent="daoTemplate" /> 
    <bean id="messageDao" class="com.projection.dao.MessageDao"
		parent="daoTemplate" />
    <bean id="orderDao" class="com.projection.dao.OrderDao"
		parent="daoTemplate" />
    <bean id="seatDao" class="com.projection.dao.SeatDao"
		parent="daoTemplate" />
    <bean id="userDao" class="com.projection.dao.UserDao"
		parent="daoTemplate" />
    <bean id="logDao" class="com.projection.dao.LogDao"
		parent="daoTemplate" />
</beans>
	