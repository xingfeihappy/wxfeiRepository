<?xml version="1.0" encoding="GBK"?>
<!-- 指定Hibernate映射文件的DTD信息 -->
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- Hibernate映射文件的根元素 -->
<hibernate-mapping package="com.projection.domain">
	<class name="Seat" table="Seat">
		<!-- 使用读写缓存 -->
		<cache usage="read-write" />
		<!-- 映射标识属性 -->
		<id name="id" type="integer" column="id">
			<!-- 指定使用identity主键生成策略 -->
			<generator class="identity" />
		</id>

		<property name="codes" column="codes" type="string" />
		<property name="position" column="position" type="string"/>
		<property name="containPeople" column="containPeople" type="string" />
        <property name="state" column="state" type="string" />
		<property name="orderTime" column="orderTime" type="date"/>
		<property name="price" column="price" type="double"/>
		<property name="remark" column="remark" type="string" />

	</class>
</hibernate-mapping>