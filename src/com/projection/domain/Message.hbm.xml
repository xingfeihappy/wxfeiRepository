<?xml version="1.0" encoding="GBK"?>
<!-- 指定Hibernate映射文件的DTD信息 -->
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- Hibernate映射文件的根元素 -->
<hibernate-mapping package="com.projection.domain">
	<class name="Message" table="Message">
		<!-- 使用读写缓存 -->
		<cache usage="read-write" />
		<!-- 映射标识属性 -->
		<id name="id" type="integer" column="id">
			<!-- 指定使用identity主键生成策略 -->
			<generator class="identity" />
		</id>

		<property name="content" column="content" type="text" />
		<property name="grade" column="grade" type="string"/>
		
		<many-to-one name="user" column="userId" class="User" cascade="none"
			lazy="proxy" fetch="select" />
		<many-to-one name="dishes" column="dishesId" class="Dishes" cascade="none"
			lazy="proxy" fetch="select" />

	</class>
</hibernate-mapping>